---
export interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonLink?: string;
}

const {
  title = "Explore A Systems Partnership",
  description = "Reach out if you and your team are committed to co-defining and co-owning infrastructure for the long term.",
  buttonText = "Explore a Systems Partnership",
  buttonLink = "/en/contact",
} = Astro.props;
---

<div class="cta-box">
  <h3 class="cta-box-title">{title}</h3>
  <p class="cta-box-description">{description}</p>
  <a href={buttonLink} class="cta-box-button">{buttonText}</a>
</div>

<style>
  .cta-box {
    max-width: 800px;
    border: 3px solid #d7a5a5;
    border-radius: 10px;
    background: var(--color-card-bg, #fff);
    padding: var(--space-xl) var(--space-lg);
    text-align: center;
    margin: var(--space-2xl, 3rem) auto 0;
  }

  .cta-box-title {
    font-family: var(--font-heading);
    font-size: var(--text-h2);
    font-weight: 700;
    color: var(--color-primary);
    margin: 0 0 var(--space-md, 1rem);
    line-height: 1.25;
  }

  .cta-box-description {
    font-family: var(--font-body);
    font-size: var(--text-body);
    color: #000;
    line-height: 1.7;
    margin: 0 0 var(--space-xl, 2rem);
    margin-left: auto;
    margin-right: auto;
  }

  .cta-box-button {
    display: inline-block;
    background: var(--color-primary);
    color: var(--color-white, #fff);
    font-family: var(--font-body);
    font-size: var(--text-body);
    font-weight: 700;
    padding: 14px 42px;
    border-radius: 6px;
    text-decoration: none;
    transition: all var(--transition-fast, 150ms ease);
    line-height: 1.4;
  }

  .cta-box-button:hover {
    background: var(--color-primary-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    color: var(--color-white, #fff);
  }

  @media (max-width: 768px) {
    .cta-box {
      padding: var(--space-2xl) var(--space-lg);
    }

    .cta-box-title {
      font-size: 1.5rem;
      line-height: 1.3;
    }

    .cta-box-description {
      font-size: 1rem;
      line-height: 1.5;
    }

    .cta-box-button {
      font-size: 1rem;
      line-height: 1.4;
      padding: var(--space-sm) var(--space-xl);
      width: 100%;
    }
  }
</style>
