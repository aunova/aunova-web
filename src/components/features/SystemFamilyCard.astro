---
export interface Props {
  name: string;
  category: string;
  tagline: string;
  description: string;
  examples: string[];
  closingLine: string;
  accentColor?: string;
  featured?: boolean;
  visualizationImage?: string;
}

const {
  name,
  category,
  tagline,
  description,
  examples,
  closingLine,
  accentColor = "var(--color-primary)",
  featured = false,
  visualizationImage,
} = Astro.props;

const nameParts = name.split(" by ");
const mainName = nameParts[0];
const suffix = nameParts.length > 1 ? ` by ${nameParts[1]}` : "";
---

<article
  class:list={["system-family-card", { featured }]}
  style={`--accent: ${accentColor}`}
>
  <div class="card-grid">
    <div class="content-column">
      <header class="card-header">
        <div class="icon-wrapper">
          <slot name="icon" />
        </div>
        <div class="header-text">
          <h3 class="name">
            {mainName}{suffix && <span class="suffix">{suffix}</span>}
          </h3>
          <span class="category">{category}</span>
        </div>
      </header>

      <div class="card-content">
        <p class="tagline">{tagline}</p>
        <p class="description">{description}</p>

        <ul class="examples-list">
          {examples.map((example) => <li>{example}</li>)}
        </ul>

        <p class="closing-line">{closingLine}</p>
      </div>
    </div>

    {
      visualizationImage && (
        <div class="visualization-column">
          <img
            src={visualizationImage}
            alt={`${name} system visualization`}
            class="visualization-image"
            loading="lazy"
          />
        </div>
      )
    }
  </div>
</article>

<style>
  .system-family-card {
    background: var(--color-background-elevated, var(--color-white));
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    transition: all var(--transition-base);
  }

  .system-family-card.featured {
    background-color: var(--color-background-elevated, var(--color-white));
    border: 1px solid #000000;
    border-radius: 10px;
    padding: clamp(1.5rem, 4vw, 53px) clamp(1.5rem, 5vw, 66px);
    position: relative;
    overflow: visible;
    isolation: isolate;
    box-shadow: none;
  }

  .system-family-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-xl);
  }

  .system-family-card.featured:hover {
    transform: none;
    box-shadow: none;
  }

  .system-family-card.featured .card-grid {
    grid-template-columns: 1fr;
    position: relative;
    z-index: 1;
  }

  .system-family-card.featured .content-column {
    position: relative;
    z-index: 3;
  }

  .system-family-card.featured .card-header {
    display: block;
    margin-bottom: var(--space-lg);
  }

  .system-family-card.featured .icon-wrapper {
    display: none;
  }

  .system-family-card.featured .category {
    display: block;
    font-family: var(--font-heading);
    font-size: var(--text-lg);
    font-weight: 400;
    color: #000;
    text-transform: none;
    margin-top: var(--space-xs);
    letter-spacing: 0;
  }

  .system-family-card.featured .name {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 5vw, 3.5rem);
    color: var(--accent);
    line-height: 1.1;
  }

  .system-family-card.featured .suffix {
    color: #000;
  }

  .system-family-card.featured .tagline,
  .system-family-card.featured .description,
  .system-family-card.featured .examples-list li,
  .system-family-card.featured .closing-line {
    font-family: var(--font-heading);
    font-size: clamp(1rem, 2vw, 1.25rem);
    line-height: 1.5;
    color: #000;
  }

  .system-family-card.featured .examples-list li {
    font-size: clamp(1rem, 2vw, 1.25rem);
  }

  .system-family-card.featured .examples-list li::before {
    color: #000;
  }

  .system-family-card.featured .closing-line {
    border-top: none;
    padding-top: var(--space-md);
    font-style: normal;
    color: #000;
  }

  .system-family-card.featured .visualization-column {
    position: absolute;
    right: -2rem;
    top: -5rem;
    width: clamp(200px, 45vw, 42rem);
    height: clamp(200px, 45vw, 42rem);
    min-height: auto;
    z-index: 1;
    pointer-events: none;
  }

  .system-family-card.featured .visualization-image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
    filter: none;
    opacity: 0.4;
    mix-blend-mode: multiply;
  }

  /* Two-column grid layout */
  .card-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-2xl);
    align-items: start;
  }

  @media (min-width: 900px) {
    .card-grid {
      grid-template-columns: 1.2fr 1fr;
      gap: var(--space-3xl);
    }
  }

  /* Content column */
  .content-column {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .card-header {
    display: flex;
    align-items: flex-start;
    gap: var(--space-md);
  }

  .icon-wrapper {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: color-mix(in srgb, var(--accent) 10%, var(--color-background));
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .icon-wrapper :global(svg) {
    color: var(--accent);
    width: 24px;
    height: 24px;
  }

  .header-text {
    flex: 1;
  }

  .category {
    display: block;
    font-size: var(--text-xs);
    color: var(--accent);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: var(--space-xs);
  }

  .name {
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-text);
    margin: 0;
    line-height: 1.3;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .tagline {
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
    line-height: 1.5;
  }

  .description {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    line-height: 1.7;
    margin: 0;
  }

  /* Integrated examples - no background box */
  .examples-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .examples-list li {
    display: flex;
    align-items: flex-start;
    gap: var(--space-sm);
    font-size: var(--text-sm);
    color: var(--color-text);
    line-height: 1.6;
    margin: 0;
  }

  .examples-list li::before {
    content: "â€¢";
    color: var(--accent);
    font-weight: 700;
    flex-shrink: 0;
    font-size: 1.2em;
  }

  .closing-line {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-style: italic;
    margin: 0;
    padding-top: var(--space-md);
    border-top: 1px solid
      color-mix(in srgb, var(--color-border) 50%, transparent);
    line-height: 1.6;
  }

  /* Visualization column */
  .visualization-column {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 300px;
  }

  .visualization-image {
    width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
    object-fit: contain;
    filter: drop-shadow(
      0 4px 16px color-mix(in srgb, var(--accent) 8%, transparent)
    );
  }

  /* Mobile responsive */
  @media (max-width: 899px) {
    .system-family-card {
      padding: var(--space-xl);
    }

    .card-grid {
      gap: var(--space-xl);
    }

    .visualization-column {
      order: -1;
      min-height: 200px;
    }

    .icon-wrapper {
      width: 40px;
      height: 40px;
    }

    .icon-wrapper :global(svg) {
      width: 20px;
      height: 20px;
    }

    .name {
      font-size: var(--text-lg);
    }

    .tagline {
      font-size: var(--text-sm);
    }

    .examples-list li {
      font-size: var(--text-xs);
    }

    /* Featured card adjustments for tablet */
    .system-family-card.featured .visualization-column {
      width: clamp(150px, 35vw, 300px);
      height: clamp(150px, 35vw, 300px);
      right: -1rem;
      top: -3rem;
    }
  }

  @media (max-width: 640px) {
    .system-family-card {
      padding: var(--space-lg);
    }

    .card-header {
      gap: var(--space-sm);
    }

    /* Featured card adjustments for mobile */
    .system-family-card.featured {
      padding: var(--space-lg);
    }

    .system-family-card.featured .visualization-column {
      display: none;
    }
  }
</style>
