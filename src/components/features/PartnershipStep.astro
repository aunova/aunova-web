---
export interface Props {
  number: number;
  title: string;
  description: string;
  isLast?: boolean;
}

const { number, title, description, isLast = false } = Astro.props;
---

<div class:list={["partnership-step", { "is-last": isLast }]}>
  <div class="step-indicator">
    <div class="step-number">{number}</div>
    {!isLast && <div class="step-line" />}
  </div>
  <div class="step-content">
    <h4 class="step-title">{title}</h4>
    <p class="step-description">{description}</p>
  </div>
</div>

<style>
  .partnership-step {
    display: flex;
    gap: var(--space-lg);
    position: relative;
  }

  .step-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-shrink: 0;
  }

  .step-number {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: var(--color-primary);
    color: var(--color-white);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-lg);
    font-weight: 700;
    flex-shrink: 0;
  }

  .step-line {
    width: 2px;
    flex: 1;
    min-height: 40px;
    background: linear-gradient(
      to bottom,
      var(--color-primary),
      color-mix(in srgb, var(--color-primary) 30%, transparent)
    );
    margin-top: var(--space-sm);
  }

  .is-last .step-line {
    display: none;
  }

  .step-content {
    padding-bottom: var(--space-xl);
    flex: 1;
  }

  .is-last .step-content {
    padding-bottom: 0;
  }

  .step-title {
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-text);
    margin: 0 0 var(--space-sm) 0;
    line-height: 1.3;
  }

  .step-description {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .partnership-step {
      gap: var(--space-md);
    }

    .step-number {
      width: 40px;
      height: 40px;
      font-size: var(--text-base);
    }

    .step-title {
      font-size: var(--text-lg);
    }

    .step-content {
      padding-bottom: var(--space-lg);
    }
  }
</style>
