---
import CTABox from "./CTABox.astro";
import {
  Compass,
  Lightbulb,
  FlaskConical,
  Layers,
  Handshake,
} from "lucide-astro";
const stepIcons = [Compass, Lightbulb, FlaskConical, Layers, Handshake];

export interface Step {
  number: number;
  title: string;
  description: string;
}

export interface Props {
  title: string;
  intro: string;
  stepsTitle: string;
  steps: Step[];
  callout: string;
  lang?: string;
}

const { title, intro, stepsTitle, steps, callout, lang = "en" } = Astro.props;
---

<section class="partnership-journey">
  <div class="journey-header">
    <h2 class="journey-title">{title}</h2>
    <p class="journey-intro">{intro}</p>
  </div>

  <div class="highlight-pill">
    <p
      set:html={callout.replace(
        /system family/gi,
        "<strong>system family</strong>",
      )}
    />
  </div>

  <div class="steps-stack">
    {
      steps.map((step, index) => (
        <div class="step-card">
          <div class="step-circle">
            {(() => {
              const Icon = stepIcons[index];
              return Icon ? <Icon size={22} /> : null;
            })()}
          </div>
          <div class="step-content">
            <h3 class="step-title">{step.title}</h3>
            <p class="step-description">{step.description}</p>
          </div>
        </div>
      ))
    }
  </div>

  <p class="closing-quote">
    Our success is not defined by launch dates, but by the enduring value our
    systems provide.
  </p>
</section>

<style>
  .partnership-journey {
    max-width: 100%;
    margin: 0 auto;
  }

  .journey-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .journey-title {
    font-family: var(--font-heading);
    font-size: var(--text-h1);
    font-weight: 700;
    color: var(--color-primary);
    margin: 0 0 var(--space-md) 0;
    line-height: var(--lh-heading);
  }

  .journey-intro {
    font-family: var(--font-body);
    font-size: var(--text-body);
    color: #000;
    margin: 0 auto;
    line-height: 1.7;
    text-align: center;
  }

  .highlight-pill {
    background: rgba(215, 165, 165, 0.25);
    border-radius: 10px;
    padding: 12px 32px;
    text-align: center;
    margin: 0 auto var(--space-2xl);
    max-width: fit-content;
  }

  .highlight-pill p {
    font-family: var(--font-body);
    font-size: var(--text-body);
    color: #570d0b;
    margin: 0;
    line-height: 1.5;
  }

  .highlight-pill :global(strong) {
    font-weight: 700;
  }

  .steps-stack {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    margin-bottom: var(--space-2xl);
  }

  .step-card {
    max-width: 800px;
    width: 100%;
    margin: 0 auto;
    background: var(--color-white, #fff);
    border: 3px solid #d7a5a5;
    border-radius: 10px;
    padding: var(--space-xl);
    display: flex;
    align-items: flex-start;
    gap: var(--space-lg);
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.08));
  }

  .step-circle {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: rgba(87, 13, 11, 0.15);
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
  }

  .step-circle :global(svg) {
    width: 22px;
    height: 22px;
  }

  .step-content {
    flex: 1;
  }

  .step-title {
    font-family: var(--font-heading);
    font-size: var(--text-h3);
    font-weight: 700;
    color: var(--color-primary);
    margin: 0 0 var(--space-xs) 0;
    line-height: 1.4;
  }

  .step-description {
    font-family: var(--font-body);
    font-size: var(--text-body-sm);
    color: #000;
    margin: 0;
    line-height: 1.6;
  }

  .closing-quote {
    text-align: center;
    font-family: var(--font-body);
    font-size: var(--text-body);
    color: #000;
    margin: 0 0 var(--space-3xl) 0;
    line-height: 1.6;
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 768px) {
    .journey-title {
      font-size: var(--text-2xl);
    }

    .journey-intro {
      font-size: 1.125rem;
      line-height: 1.6;
    }

    .highlight-pill {
      padding: 16px 24px;
    }

    .highlight-pill p {
      font-size: 1rem;
    }

    .step-card {
      padding: var(--space-xl) var(--space-lg);
      gap: var(--space-md);
    }

    .step-circle {
      width: 56px;
      height: 56px;
    }

    .step-circle :global(svg) {
      width: 28px;
      height: 28px;
    }

    .step-title {
      font-size: 1.125rem;
      line-height: 1.3;
    }

    .step-description {
      font-size: 1rem;
      line-height: 1.5;
    }

    .closing-quote {
      font-size: 1.125rem;
    }
  }
</style>
