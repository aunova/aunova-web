---
import PageLayout from "../../layouts/PageLayout.astro";
import { getTranslation } from "../../utils/i18n";
import SystemFamilyCard from "../../components/features/SystemFamilyCard.astro";
import PartnershipJourney from "../../components/features/PartnershipJourney.astro";
import CriteriaList from "../../components/features/CriteriaList.astro";
import CTABox from "../../components/features/CTABox.astro";
import {
  Leaf,
  Globe,
  Clock,
  Handshake,
  Shield,
  TrendingUp,
  Target,
  Fingerprint,
  Brain,
  HeartPulse,
  Lock,
  Scale,
  Users,
  Compass,
  Code,
  FlaskConical,
} from "lucide-astro";

const lang = "en";
const t = getTranslation(lang);

const principleIcons = [Globe, Clock, Handshake, Shield, TrendingUp, Target];
const futureIcons = [Fingerprint, Brain, HeartPulse, Lock];
const whyIcons = [Shield, Scale, Users];
const engageIcons = [Compass, Code, FlaskConical, Handshake];
---

<PageLayout
  title="Aunova - Long-Term Systems Partner for Human & Planet-Critical Infrastructure"
  description={t.hero.subtitle}
  lang={lang}
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-background">
      <img
        src="/images/hero/sustainable-community.png"
        alt="Sustainable community with modern architecture and green spaces"
        loading="eager"
        decoding="async"
      />
      <div class="hero-overlay"></div>
    </div>
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title">{t.hero.title}</h1>
        <p class="hero-subtitle">{t.hero.subtitle}</p>
        <div class="hero-actions">
          <a href={`/${lang}/contact`} class="btn btn-primary">
            {t.hero.cta.primary}
          </a>
          <a href="#partnership" class="hero-link">
            {t.hero.cta.secondary}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- About / Different Company Section -->
  <section class="about-section" id="different-company">
    <div class="container">
      <div class="section-content">
        <h2 class="section-title">{t.differentCompany.title}</h2>
        <div class="body-text">
          {t.differentCompany.body.map((paragraph) => <p>{paragraph}</p>)}
        </div>
      </div>

      <!-- GreenBlocks Callout -->
      <aside class="callout-box">
        <div class="callout-circle">
          <Leaf size={24} />
        </div>
        <div class="callout-content">
          <p class="callout-intro">Our first system partnership initiative</p>
          <p class="callout-main">
            <strong class="callout-brand">GreenBlocks</strong> â€” environmental and
            sustainability infrastructure for the built world.
          </p>
        </div>
      </aside>

      <!-- Principles Grid -->
      <div class="principles-grid">
        {
          t.differentCompany.principles.map((principle, index) => {
            const Icon = principleIcons[index];
            return (
              <div class="principle-card">
                <div class="principle-icon">
                  <Icon size={20} />
                </div>
                <div class="principle-content">
                  <h3 class="principle-title">{principle.title}</h3>
                  <p class="principle-description">{principle.description}</p>
                </div>
              </div>
            );
          })
        }
      </div>
    </div>
  </section>

  <!-- System Families Section -->
  <section class="system-families" id="system-families">
    <div class="container">
      <div class="section-content">
        <h2 class="section-title">{t.systemFamilies.title}</h2>
        <div class="body-text">
          <p>{t.systemFamilies.intro}</p>
        </div>
      </div>

      <div class="families-grid">
        <SystemFamilyCard
          name={t.systemFamilies.sustainability.name}
          category={t.systemFamilies.sustainability.category}
          tagline={t.systemFamilies.sustainability.tagline}
          description=""
          examples={[...t.systemFamilies.sustainability.examples]}
          closingLine={t.systemFamilies.sustainability.closingLine}
          accentColor="var(--color-primary)"
          featured={true}
          visualizationImage="/images/system-families.webp"
        >
          <Leaf size={24} slot="icon" />
        </SystemFamilyCard>

        <div class="future-families">
          <div class="future-header">
            <h3 class="future-title">{t.systemFamilies.future.title}</h3>
            <span class="future-subtitle"
              >In Development with future partners</span
            >
          </div>
          <div class="future-grid">
            {
              t.systemFamilies.future.items.map((item, index) => {
                const descriptions = [
                  "We co-build, not just sell.",
                  "We choose our partners carefully.",
                  "Healthcare innovate.",
                  "Success measured in adoption and outcomes.",
                ];
                const Icon = futureIcons[index];
                return (
                  <div class="future-card">
                    <div class="future-card-icon">
                      <Icon size={20} />
                    </div>
                    <div class="future-card-content">
                      <h4 class="future-card-title">{item}</h4>
                      <p class="future-card-description">
                        {descriptions[index]}
                      </p>
                    </div>
                  </div>
                );
              })
            }
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Partnership Journey Section -->
  <section class="partnership-section" id="partnership">
    <div class="container">
      <PartnershipJourney
        title={t.partnership.title}
        intro={t.partnership.intro}
        stepsTitle={t.partnership.stepsTitle}
        steps={[...t.partnership.steps]}
        callout={t.partnership.callout}
        lang={lang}
      />
    </div>
  </section>

  <!-- Partner Criteria Section -->
  <section class="criteria-section-wrapper" id="criteria">
    <div class="container">
      <CriteriaList
        title={t.partnerCriteria.title}
        intro={t.partnerCriteria.intro}
        criteria={[...t.partnerCriteria.criteria]}
        boundary={t.partnerCriteria.boundary}
        closingStatement={t.partnerCriteria.closingStatement}
        lang={lang}
      />
    </div>
  </section>

  <!-- Why Aunova Section -->
  <section class="why-aunova" id="why-aunova">
    <div class="container">
      <div class="section-content">
        <h2 class="section-title">{t.whyAunova.title}</h2>
        <div class="body-text">
          {t.whyAunova.intro.map((paragraph) => <p>{paragraph}</p>)}
        </div>
      </div>

      <div class="stacked-cards">
        {
          t.whyAunova.cards.map((card, index) => {
            const Icon = whyIcons[index];
            return (
              <div class="stacked-card">
                <div class="stacked-card-circle">
                  <Icon size={22} />
                </div>
                <div class="stacked-card-text">
                  <h3 class="stacked-card-title">{card.title}</h3>
                  <p>{card.description}</p>
                </div>
              </div>
            );
          })
        }
      </div>

      <p class="why-closing">
        {t.whyAunova.closing}
      </p>

      <CTABox
        title={t.whyAunova.cta.title}
        description={t.whyAunova.cta.description}
        buttonText={t.whyAunova.cta.button}
        buttonLink={`/${lang}/contact`}
      />
    </div>
  </section>

  <!-- Engagement Cards Section -->
  <section class="engage-section" id="engage">
    <div class="container">
      <div class="section-content">
        <h2 class="section-title">{t.engagementCards.sectionTitle}</h2>
        <div class="subtitle-text">
          {t.engagementCards.subtitles.map((paragraph) => <p>{paragraph}</p>)}
        </div>
      </div>

      <div class="engage-cards">
        {
          t.engagementCards.cards.map((card, index) => {
            const Icon = engageIcons[index];
            return (
              <div class="engage-card">
                <h3 class="engage-card-title">{card.title}</h3>
                <div class="engage-card-circle">
                  <Icon size={48} />
                </div>
                <p class="engage-card-description">{card.description}</p>
                <a href={`/${lang}/contact`} class="engage-card-btn">
                  {card.button}
                </a>
              </div>
            );
          })
        }
      </div>

      <div class="engage-cta">
        <p class="engage-cta-text">{t.engagementCards.closingText}</p>
        <a href={`/${lang}/contact`} class="engage-cta-btn">
          {t.engagementCards.closingButton}
        </a>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  /* ===== Hero Section ===== */
  .hero {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to right,
      rgba(237, 218, 215, 0.95) 0%,
      rgba(237, 218, 215, 0.8) 35%,
      rgba(237, 218, 215, 0.4) 60%,
      transparent 85%
    );
  }

  .hero .container {
    position: relative;
    z-index: 1;
  }

  .hero-content {
    max-width: 700px;
    padding: var(--space-3xl) 0;
    text-align: left;
  }

  .hero-title {
    font-family: var(--font-heading);
    font-size: clamp(2rem, 5vw, 50px);
    font-weight: 700;
    line-height: 1.38;
    color: #621011;
    margin-bottom: var(--space-xl);
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-family: var(--font-body);
    font-size: clamp(1rem, 2vw, 20px);
    color: #000;
    line-height: 2;
    margin-bottom: var(--space-2xl);
    font-weight: 400;
  }

  .hero-actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    align-items: flex-start;
  }

  .hero-link {
    font-size: 20px;
    color: #ffffff;
    text-decoration: none;
    text-underline-offset: 4px;
    font-weight: 400;
    transition: color var(--transition-fast);
  }

  .hero-link:hover {
    color: #ffffff;
    text-decoration: underline;
  }

  /* ===== Shared Section Styles ===== */
  .section-content {
    max-width: 100%;
    margin: 0 auto var(--space-2xl);
    text-align: center;
  }

  .section-title {
    font-family: var(--font-heading);
    font-size: var(--text-h1);
    font-weight: 700;
    color: #570d0b;
    margin-bottom: var(--space-xl);
    line-height: var(--lh-heading);
  }

  .section-intro {
    font-family: var(--font-heading);
    font-size: var(--text-body);
    color: #000;
    line-height: 1.7;
    margin: 0;
  }

  .body-text {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .body-text p {
    font-family: var(--font-body);
    font-size: var(--text-body);
    color: #000;
    line-height: 1.7;
    text-align: center;
    margin: 0;
  }

  .subtitle-text {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .subtitle-text p {
    font-family: var(--font-body);
    font-size: var(--text-body);
    color: #000;
    line-height: 1.6;
    margin: 0;
  }

  /* ===== About Section ===== */
  .about-section {
    padding: clamp(3rem, 6vw, 97px) clamp(1rem, 7vw, 100px);
    background: linear-gradient(360deg, #ffffff 0%, #f2ebed 100%);
  }

  /* ===== Callout Box (GreenBlocks) ===== */
  .callout-box {
    max-width: 800px;
    margin: var(--space-2xl) auto;
    padding: var(--space-xl) var(--space-lg);
    background: var(--color-card-bg);
    border: 3px solid #d7a5a5;
    border-radius: 10px;
    display: flex;
    align-items: center;
    gap: var(--space-xl);
  }

  .callout-circle {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: #d9d9d9;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .callout-circle :global(svg) {
    color: var(--color-primary);
    width: 32px;
    height: 32px;
  }

  .callout-content {
    flex: 1;
  }

  .callout-intro {
    font-family: var(--font-body);
    font-size: var(--text-body-sm);
    color: #000;
    font-style: italic;
    margin: 0 0 10px 0;
    line-height: 1.6;
  }

  .callout-main {
    font-family: var(--font-heading);
    font-size: var(--text-h2);
    color: #570d0b;
    margin: 0;
    line-height: 1.3;
    font-weight: 700;
  }

  .callout-brand {
    color: #570d0b;
    font-weight: 700;
    font-size: var(--text-h2);
  }

  /* ===== Principles Grid ===== */
  .principles-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 35px;
    max-width: 800px;
    margin: var(--space-2xl) auto 0;
  }

  .principle-card {
    background: var(--color-card-bg);
    border: 3px solid #d7a5a5;
    border-radius: 9px;
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    filter: drop-shadow(0px 2px 8px rgba(0, 0, 0, 0.08));
  }

  .principle-icon {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: #570d0b;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .principle-icon :global(svg) {
    color: white;
    width: 24px;
    height: 24px;
  }

  .principle-content {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .principle-title {
    font-family: var(--font-heading);
    font-size: var(--text-h3);
    font-weight: 700;
    color: #570d0b;
    margin: 0;
    line-height: 1.4;
  }

  .principle-description {
    font-family: var(--font-body);
    font-size: var(--text-body-sm);
    color: #000;
    margin: 0;
    line-height: 1.7;
  }

  /* ===== System Families Section ===== */
  .system-families {
    padding: clamp(3rem, 6vw, 97px) clamp(1rem, 7vw, 100px);
    background: linear-gradient(360deg, #ffffff 0%, #f2ebed 100%);
  }

  .families-grid {
    display: grid;
    gap: var(--space-2xl);
  }

  .future-families {
    margin-top: var(--space-xl);
  }

  .future-header {
    display: flex;
    align-items: baseline;
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
    flex-wrap: wrap;
  }

  .future-title {
    font-family: var(--font-heading);
    font-size: var(--text-h2);
    font-weight: 700;
    color: #570d0b;
    margin: 0;
    line-height: 1.25;
  }

  .future-subtitle {
    font-family: var(--font-body);
    font-size: var(--text-h3);
    color: #000;
    font-style: normal;
    line-height: 1.4;
  }

  .future-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px 34px;
  }

  .future-card {
    background: var(--color-card-bg);
    border: 3px solid #d7a5a5;
    border-radius: 9px;
    padding: var(--space-xl);
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: var(--space-md);
    filter: drop-shadow(0px 2px 8px rgba(0, 0, 0, 0.08));
  }

  .future-card-icon {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: var(--color-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    color: white;
  }

  .future-card-icon :global(svg) {
    color: white;
    width: 24px;
    height: 24px;
  }

  .future-card-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .future-card-title {
    font-family: var(--font-body);
    font-size: var(--text-body);
    font-weight: 400;
    color: #000;
    margin: 0;
    line-height: 1.5;
  }

  .future-card-description {
    font-family: var(--font-body);
    font-size: var(--text-body-sm);
    color: #000;
    margin: 0;
    line-height: 1.6;
  }

  /* ===== Partnership Section ===== */
  .partnership-section {
    padding: clamp(3rem, 6vw, 97px) clamp(1rem, 7vw, 100px);
    background: linear-gradient(360deg, #ffffff 0%, #f2ebed 100%);
  }

  /* ===== Criteria Section ===== */
  .criteria-section-wrapper {
    padding: clamp(3rem, 6vw, 97px) clamp(1rem, 7vw, 100px);
    background: linear-gradient(360deg, #ffffff 0%, #f2ebed 100%);
  }

  /* ===== Why Aunova Section ===== */
  .why-aunova {
    padding: clamp(3rem, 6vw, 97px) clamp(1rem, 7vw, 100px);
    background: linear-gradient(360deg, #ffffff 0%, #f2ebed 100%);
  }

  .stacked-cards {
    display: flex;
    flex-direction: column;
    gap: 25px;
    max-width: 800px;
    margin: 0 auto;
  }

  .stacked-card {
    background: var(--color-card-bg);
    border: 3px solid #d7a5a5;
    border-radius: 10px;
    padding: var(--space-xl);
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    filter: drop-shadow(0px 2px 8px rgba(0, 0, 0, 0.08));
  }

  .stacked-card-circle {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: #570d0b;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }

  .stacked-card-circle :global(svg) {
    width: 24px;
    height: 24px;
  }

  .stacked-card-text {
    flex: 1;
  }

  .stacked-card-text p {
    font-family: var(--font-body);
    font-size: var(--text-body);
    color: #000;
    line-height: 1.7;
    margin: 0;
  }

  .stacked-card-title {
    font-family: var(--font-heading);
    font-size: var(--text-body);
    font-weight: 700;
    color: var(--color-primary);
    margin: 0 0 var(--space-xs);
    line-height: 1.4;
  }

  .why-closing {
    font-family: var(--font-heading);
    font-size: var(--text-h2);
    font-weight: 700;
    color: #570d0b;
    text-align: center;
    max-width: 100%;
    margin: var(--space-2xl) auto 0;
    line-height: 1.25;
  }

  /* ===== Buttons ===== */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 52px;
    border-radius: 6px;
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 15px;
    line-height: 21px;
    transition: all var(--transition-fast);
    text-decoration: none;
    cursor: pointer;
    border: none;
  }

  .btn-primary {
    background-color: #570d0b;
    color: #ffffff;
  }

  .btn-primary:hover {
    background-color: var(--color-primary-hover);
    border-color: var(--color-primary-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    text-decoration: none;
    color: var(--color-white);
  }

  /* ===== Engage Section ===== */
  .engage-section {
    padding: clamp(3rem, 6vw, 97px) clamp(1rem, 7vw, 100px);
    background: linear-gradient(360deg, #ffffff 0%, #f2ebed 100%);
  }

  .engage-cards {
    display: flex;
    gap: 31px;
  }

  .engage-card {
    flex: 1;
    border: 1px solid #000;
    border-radius: 10px;
    padding: 35px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    text-align: center;
  }

  .engage-card-title {
    font-family: var(--font-heading);
    font-size: var(--text-h3);
    font-weight: 700;
    color: #570d0b;
    line-height: 1.4;
    margin: 0;
  }

  .engage-card-circle {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: #d9d9d9;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .engage-card-circle :global(svg) {
    color: var(--color-primary);
    width: 48px;
    height: 48px;
  }

  .engage-card-description {
    font-family: var(--font-body);
    font-size: var(--text-body);
    font-weight: 400;
    color: #000;
    line-height: 1.6;
    margin: 0;
    flex: 1;
  }

  .engage-card-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 12px 24px;
    width: 100%;
    background: #570d0b;
    border-radius: 6px;
    font-family: var(--font-heading);
    font-size: var(--text-body-sm);
    font-weight: 700;
    line-height: 1.4;
    color: #ffffff;
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .engage-card-btn:hover {
    background: var(--color-primary-hover);
    color: #ffffff;
    text-decoration: none;
    transform: translateY(-2px);
  }

  .engage-cta {
    margin-top: 48px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 48px;
  }

  .engage-cta-text {
    font-family: var(--font-body);
    font-size: var(--text-body);
    color: #000;
    line-height: 1.7;
    margin: 0;
  }

  .engage-cta-btn {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding: 14px 40px;
    background: #570d0b;
    border-radius: 8px;
    font-family: var(--font-heading);
    font-size: var(--text-body);
    font-weight: 700;
    line-height: 1.4;
    color: #ffffff;
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .engage-cta-btn:hover {
    background: var(--color-primary-hover);
    color: #ffffff;
    text-decoration: none;
    transform: translateY(-2px);
  }

  /* ===== Responsive ===== */
  @media (max-width: 768px) {
    .hero {
      min-height: 100vh;
    }

    .hero-content {
      padding: var(--space-2xl) 0;
