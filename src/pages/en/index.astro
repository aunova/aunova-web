---
import PageLayout from "../../layouts/PageLayout.astro";
import { getTranslation } from "../../utils/i18n";
import SystemFamilyCard from "../../components/features/SystemFamilyCard.astro";
import PartnershipJourney from "../../components/features/PartnershipJourney.astro";
import CriteriaList from "../../components/features/CriteriaList.astro";
import { Heart, Timer, Handshake, Users, Clock, TrendingUp, Leaf, User, Brain, HeartHandshake, Shield } from "lucide-astro";

const lang = "en";
const t = getTranslation(lang);
---

<PageLayout
  title="Aunova - Long-Term Systems Partner for Human & Planet-Critical Infrastructure"
  description={t.hero.subtitle}
  lang={lang}
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-background">
      <img
        src="/images/hero/sustainable-community.png"
        alt="Sustainable community with modern architecture and green spaces"
        loading="eager"
        decoding="async"
      />
      <div class="hero-overlay"></div>
    </div>
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title">{t.hero.title}</h1>
        <p class="hero-subtitle">{t.hero.subtitle}</p>
        <p class="hero-supporting">{t.hero.supportingLine}</p>
        <div class="hero-actions">
          <a href={`/${lang}/contact`} class="btn btn-primary">
            {t.hero.cta.primary}
          </a>
          <a href="#partnership" class="btn btn-outline">
            {t.hero.cta.secondary}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Different Company Section -->
  <section class="different-company" id="different-company">
    <div class="container">
      <div class="section-content">
        <h2 class="section-title">{t.differentCompany.title}</h2>
        <div class="body-text">
          {t.differentCompany.body.map((paragraph) => (
            <p>{paragraph}</p>
          ))}
        </div>
        <aside class="callout-box">
          <div class="callout-icon">
            <Leaf size={24} />
          </div>
          <div class="callout-content">
            <p set:html={t.differentCompany.callout}></p>
          </div>
        </aside>
      </div>

      <!-- Principles Grid -->
      <div class="principles-grid">
        {t.differentCompany.principles.map((principle, index) => {
          const icons = [Heart, Timer, Handshake, Users, Clock, TrendingUp];
          const IconComponent = icons[index];

          return (
            <div class="principle-card">
              <div class="principle-icon">
                <IconComponent size={24} />
              </div>
              <h3 class="principle-title">{principle.title}</h3>
              <p class="principle-description">{principle.description}</p>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- System Families Section -->
  <section class="system-families" id="system-families">
    <div class="container">
      <header class="section-header">
        <h2 class="section-title">{t.systemFamilies.title}</h2>
        <p class="section-intro">{t.systemFamilies.intro}</p>
      </header>

      <div class="families-grid">
        <SystemFamilyCard
          name={t.systemFamilies.sustainability.name}
          category={t.systemFamilies.sustainability.category}
          tagline={t.systemFamilies.sustainability.tagline}
          description={t.systemFamilies.sustainability.description}
          examples={[...t.systemFamilies.sustainability.examples]}
          closingLine={t.systemFamilies.sustainability.closingLine}
          accentColor="var(--color-primary)"
          featured={true}
          visualizationImage="/images/greenblocks-visualization.svg"
        >
          <Leaf size={24} slot="icon" />
        </SystemFamilyCard>

        <div class="future-families">
          <h3 class="future-title">{t.systemFamilies.future.title}</h3>
          <div class="future-grid">
            {t.systemFamilies.future.items.map((item, index) => {
              const icons = [User, Brain, HeartHandshake, Shield];
              const IconComponent = icons[index];
              const descriptions = [
                "We co-build, not just sell.",
                "We choose our partners carefully.",
                "Healthcare innovate.",
                "Success measured in adoption and outcomes."
              ];
              return (
                <div class="future-card">
                  <div class="future-card-icon">
                    <IconComponent size={24} />
                  </div>
                  <h4 class="future-card-title">{item}</h4>
                  <p class="future-card-description">{descriptions[index]}</p>
                </div>
              );
            })}
          </div>
          <p class="future-note">{t.systemFamilies.future.note}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Partnership Journey Section -->
  <section class="partnership-section" id="partnership">
    <div class="container">
      <PartnershipJourney
        title={t.partnership.title}
        intro={t.partnership.intro}
        stepsTitle={t.partnership.stepsTitle}
        steps={[...t.partnership.steps]}
        callout={t.partnership.callout}
      />
    </div>
  </section>

  <!-- Partner Criteria Section -->
  <section class="criteria-section-wrapper" id="criteria">
    <div class="container">
      <CriteriaList
        title={t.partnerCriteria.title}
        intro={t.partnerCriteria.intro}
        criteria={[...t.partnerCriteria.criteria]}
        boundary={t.partnerCriteria.boundary}
      />
    </div>
  </section>

  <!-- Why Aunova Section -->
  <section class="why-aunova">
    <div class="container">
      <div class="section-content">
        <h2 class="section-title">{t.whyAunova.title}</h2>
        <div class="body-text">
          {t.whyAunova.body.map((paragraph) => (
            <p>{paragraph}</p>
          ))}
        </div>
        <p class="credibility-line">{t.whyAunova.credibility}</p>
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <section class="final-cta">
    <div class="container">
      <div class="cta-content">
        <h2>{t.contact.title}</h2>
        <p class="cta-intro">{t.contact.intro}</p>
        <a href={`/${lang}/contact`} class="btn btn-primary btn-lg">
          {t.hero.cta.primary}
        </a>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    min-height: 90vh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    image-rendering: -webkit-optimize-contrast;
    image-rendering: crisp-edges;
    filter: contrast(1.1) saturate(1.05);
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      color-mix(in srgb, #E3DCC2 90%, transparent) 0%,
      color-mix(in srgb, #E3DCC2 75%, transparent) 50%,
      color-mix(in srgb, #E3DCC2 55%, transparent) 100%
    );
  }

  .hero .container {
    position: relative;
    z-index: 1;
  }

  .hero-content {
    max-width: 850px;
    padding: var(--space-3xl) 0;
  }

  .hero-title {
    font-size: clamp(var(--text-3xl), 4.5vw, var(--text-4xl));
    font-weight: 700;
    line-height: 1.15;
    color: var(--color-primary);
    margin-bottom: var(--space-lg);
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: var(--text-lg);
    color: var(--color-text);
    line-height: 1.7;
    margin-bottom: var(--space-md);
  }

  .hero-supporting {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: var(--space-2xl);
    font-style: italic;
  }

  .hero-actions {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  /* Different Company Section */
  .different-company {
    padding: var(--space-5xl) 0;
    background: var(--color-background);
  }

  .section-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .section-title {
    font-size: var(--text-4xl);
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: var(--space-xl);
    text-align: center;
  }

  .body-text {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .body-text p {
    font-size: var(--text-lg);
    color: var(--color-text);
    line-height: 1.7;
    margin: 0;
  }

  .callout-box {
    margin-top: var(--space-2xl);
    padding: var(--space-lg);
    background: color-mix(in srgb, var(--color-primary) 8%, var(--color-background));
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: flex-start;
    gap: var(--space-md);
  }

  .callout-icon {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    background: color-mix(in srgb, var(--color-primary) 10%, var(--color-background));
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .callout-icon svg {
    color: var(--color-primary);
  }

  .callout-content {
    flex: 1;
  }

  .callout-content p {
    font-size: var(--text-lg);
    color: var(--color-text);
    margin: 0;
    font-weight: 500;
    line-height: 1.5;
  }

  .callout-content strong {
    color: var(--color-primary);
    font-weight: 700;
  }

  /* Principles Grid */
  .principles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-lg);
    margin-top: var(--space-3xl);
  }

  .principle-card {
    background: var(--color-background-elevated, var(--color-white));
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    transition: all var(--transition-fast);
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .principle-icon {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: color-mix(in srgb, var(--color-primary) 10%, var(--color-background));
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-primary);
    margin-bottom: var(--space-sm);
    flex-shrink: 0;
  }

  .principle-icon svg {
    color: var(--color-primary);
    stroke-width: 2;
  }

  .principle-card:hover {
    border-color: var(--color-primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .principle-title {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-primary);
    margin: 0 0 var(--space-sm) 0;
    line-height: 1.3;
  }

  .principle-description {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.5;
  }

  /* System Families Section */
  .system-families {
    padding: var(--space-5xl) 0;
    background: var(--color-background-elevated, var(--color-white));
  }

  .section-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto var(--space-3xl);
  }

  .section-intro {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    line-height: 1.7;
    margin: 0;
  }

  .families-grid {
    display: grid;
    gap: var(--space-2xl);
  }

  .future-families {
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-xl);
  }

  .future-title {
    font-size: var(--text-xl);
    font-weight: 600;
    color: var(--color-text-muted);
    margin: 0 0 var(--space-lg) 0;
  }

  .future-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-lg);
    margin: var(--space-lg) 0;
  }

  .future-card {
    background: var(--color-background-elevated, var(--color-white));
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    transition: all var(--transition-fast);
  }

  .future-card:hover {
    border-color: color-mix(in srgb, var(--color-primary) 30%, var(--color-border));
    transform: translateY(-2px);
    box-shadow: var(--shadow-sm);
  }

  .future-card-icon {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: color-mix(in srgb, var(--color-primary) 8%, var(--color-background));
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .future-card-icon svg {
    color: var(--color-primary);
    opacity: 0.8;
  }

  .future-card-title {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-primary);
    margin: 0;
    line-height: 1.3;
  }

  .future-card-description {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.5;
  }

  .future-note {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-style: italic;
    margin: 0;
    text-align: center;
  }

  /* Partnership Section */
  .partnership-section {
    padding: var(--space-5xl) 0;
    background: var(--color-background);
  }

  /* Criteria Section */
  .criteria-section-wrapper {
    padding: var(--space-5xl) 0;
    background: var(--color-background-elevated, var(--color-white));
  }

  /* Why Aunova Section */
  .why-aunova {
    padding: var(--space-5xl) 0;
    background: var(--color-background);
  }

  .credibility-line {
    margin-top: var(--space-xl);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-border);
    font-size: var(--text-base);
    color: var(--color-text-muted);
    font-style: italic;
  }

  /* Final CTA Section */
  .final-cta {
    padding: var(--space-5xl) 0;
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--color-primary) 5%, var(--color-background)) 0%,
      var(--color-background) 100%
    );
  }

  .cta-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-size: var(--text-3xl);
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: var(--space-md);
  }

  .cta-intro {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    margin-bottom: var(--space-xl);
    line-height: 1.7;
  }

  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-sm) var(--space-xl);
    border-radius: var(--radius-md);
    font-weight: 600;
    font-size: var(--text-base);
    transition: all var(--transition-fast);
    text-decoration: none;
    cursor: pointer;
    border: 2px solid transparent;
  }

  .btn-lg {
    padding: var(--space-md) var(--space-2xl);
    font-size: var(--text-lg);
  }

  .btn-primary {
    background-color: var(--color-primary);
    color: var(--color-white);
    border-color: var(--color-primary);
  }

  .btn-primary:hover {
    background-color: var(--color-primary-hover);
    border-color: var(--color-primary-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    text-decoration: none;
    color: var(--color-white);
  }

  .btn-outline {
    background-color: transparent;
    color: var(--color-primary);
    border-color: var(--color-primary);
  }

  .btn-outline:hover {
    background-color: var(--color-primary);
    color: var(--color-white);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    text-decoration: none;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      min-height: 100vh;
    }

    .hero-content {
      padding: var(--space-2xl) 0;
    }

    .hero-title {
      font-size: var(--text-3xl);
    }

    .hero-subtitle {
      font-size: var(--text-base);
    }

    .hero-actions {
      flex-direction: column;
    }

    .hero-actions .btn {
      width: 100%;
    }

    .different-company,
    .system-families,
    .partnership-section,
    .criteria-section-wrapper,
    .why-aunova,
    .final-cta {
      padding: var(--space-3xl) 0;
    }

    .section-title {
      font-size: var(--text-3xl);
    }

    .body-text p {
      font-size: var(--text-base);
    }

    .future-grid {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }

    .future-card {
      padding: var(--space-md);
    }

    .future-card-icon {
      width: 40px;
      height: 40px;
    }

    .future-card-title {
      font-size: var(--text-base);
    }

    .principles-grid {
      grid-template-columns: 1fr;
      gap: var(--space-md);
      margin-top: var(--space-2xl);
    }

    .principle-card {
      padding: var(--space-lg);
    }

    .principle-icon {
      width: 40px;
      height: 40px;
    }

    .principle-title {
      font-size: var(--text-base);
    }

    .callout-box {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .callout-icon {
      width: 56px;
      height: 56px;
    }

    .callout-icon img {
      width: 40px;
      height: 40px;
    }

    .callout-content p {
      font-size: var(--text-base);
    }
  }
</style>
