---
import PageLayout from '../../layouts/PageLayout.astro';
import { getCollection } from 'astro:content';
import { getTranslation } from '../../utils/i18n';

const lang = 'en';
const t = getTranslation(lang);

// Get all English blog posts
const allPosts = await getCollection('blog', ({ id }) => {
  return id.startsWith('en/');
});

// Sort posts by date, newest first
const posts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<PageLayout 
  title="Blog - Aunova"
  description="Insights on Zero-Knowledge proofs, AI, and Web3 technologies. Stay updated with the latest in privacy-preserving tech."
  lang={lang}
>
  <section class="blog-hero">
    <div class="container">
      <h1>{t.blog.title}</h1>
      <p class="lead">{t.blog.description}</p>
      <div class="blog-actions">
        <a href="/rss.xml" class="rss-link" title="Subscribe to RSS Feed">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 11a9 9 0 0 1 9 9"></path>
            <path d="M4 4a16 16 0 0 1 16 16"></path>
            <circle cx="5" cy="19" r="1"></circle>
          </svg>
          RSS Feed
        </a>
      </div>
    </div>
  </section>

  <section class="blog-section">
    <div class="container">
      {posts.length === 0 ? (
        <div class="no-posts">
          <p>No blog posts available yet. Check back soon!</p>
        </div>
      ) : (
        <div class="blog-grid">
          {posts.map((post) => (
            <article class="blog-card">
              {post.data.image && (
                <div class="blog-image">
                  <img src={post.data.image} alt={post.data.imageAlt || post.data.title} loading="lazy" />
                </div>
              )}
              <div class="blog-content">
                <div class="blog-meta">
                  <span class="blog-category">{post.data.category}</span>
                  <time datetime={post.data.publishDate.toISOString()}>
                    {post.data.publishDate.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                </div>
                <h2>
                  <a href={`/${lang}/blog/${post.slug.replace('en/', '')}`}>
                    {post.data.title}
                  </a>
                </h2>
                <p>{post.data.description}</p>
                <div class="blog-footer">
                  <span class="blog-author">{post.data.author}</span>
                  <a href={`/${lang}/blog/${post.slug.replace('en/', '')}`} class="read-more">
                    {t.blog.readMore} â†’
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>
</PageLayout>

<style>
  .blog-hero {
    padding: var(--space-3xl) 0;
    background: linear-gradient(135deg, var(--color-background) 0%, color-mix(in srgb, var(--color-secondary) 10%, var(--color-background)) 100%);
  }
  
  .hero-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }
  
  .hero-content h1 {
    font-size: var(--text-4xl);
    font-weight: 700;
    margin-bottom: var(--space-md);
  }
  
  .hero-content p {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
  }
  
  .blog-actions {
    margin-top: var(--space-lg);
    display: flex;
    justify-content: center;
    gap: var(--space-md);
  }
  
  .rss-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-md);
    border: 1px solid var(--color-primary);
    border-radius: var(--radius-md);
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
    font-size: var(--text-sm);
    transition: all var(--transition-fast);
  }
  
  .rss-link:hover {
    background-color: var(--color-primary);
    color: var(--color-white);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }
  
  .rss-link svg {
    width: 20px;
    height: 20px;
  }
  
  .blog-section {
    padding: var(--space-3xl) 0 var(--space-5xl);
  }
  
  .no-posts {
    text-align: center;
    padding: var(--space-3xl);
    color: var(--color-text-muted);
  }
  
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--space-xl);
  }
  
  .blog-card {
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
  }
  
  .blog-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
  }
  
  .blog-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    background-color: var(--color-gray-100);
  }
  
  .blog-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .blog-content {
    padding: var(--space-lg);
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .blog-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-sm);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  
  .blog-category {
    background-color: var(--color-secondary);
    color: var(--color-black);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    font-weight: 500;
    text-transform: capitalize;
  }
  
  .blog-content h2 {
    font-size: var(--text-xl);
    font-weight: 700;
    margin-bottom: var(--space-sm);
    line-height: 1.3;
  }
  
  .blog-content h2 a {
    color: var(--color-text);
    text-decoration: none;
    transition: color var(--transition-fast);
  }
  
  .blog-content h2 a:hover {
    color: var(--color-primary);
  }
  
  .blog-content > p {
    color: var(--color-text-muted);
    line-height: 1.6;
    flex: 1;
    margin-bottom: var(--space-md);
  }
  
  .blog-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border);
  }
  
  .blog-author {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }
  
  .read-more {
    color: var(--color-primary);
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-fast);
  }
  
  .read-more:hover {
    transform: translateX(4px);
  }
  
  @media (max-width: 768px) {
    .blog-grid {
      grid-template-columns: 1fr;
    }
    
    .hero-content h1 {
      font-size: var(--text-3xl);
    }
  }
</style>
