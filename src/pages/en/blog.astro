---
import PageLayout from '../../layouts/PageLayout.astro';
import { getCollection } from 'astro:content';
import { getTranslation } from '../../utils/i18n';
import BlogHero from '../../components/ui/BlogHero.astro';
import BlogCard from '../../components/ui/BlogCard.astro';
import '../../styles/utilities.css';

const lang = 'en';
const t = getTranslation(lang);

// Get all English blog posts
const allPosts = await getCollection('blog', ({ id }) => {
  return id.startsWith('en/');
});

// Sort posts by date, newest first
const posts = allPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<PageLayout 
  title="Blog - Aunova"
  description="Insights on Zero-Knowledge proofs, AI, and Web3 technologies. Stay updated with the latest in privacy-preserving tech."
  lang={lang}
>
  <BlogHero 
    title={t.blog.title}
    description={t.blog.subtitle}
    showRss={true}
    rssText="RSS Feed"
  />

  <section class="py-12 md:py-16">
    <div class="container">
      {posts.length === 0 ? (
        <div class="text-center py-12 text-muted">
          <p class="text-lg">No blog posts available yet. Check back soon!</p>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {posts.map((post) => (
            <BlogCard
              title={post.data.title}
              description={post.data.description}
              href={`/${lang}/blog/${post.slug.replace('en/', '')}`}
              image={post.data.image}
              imageAlt={post.data.imageAlt}
              category={post.data.category}
              author={post.data.author}
              date={post.data.publishDate}
              readMoreText={t.blog.readMore}
            />
          ))}
        </div>
      )}
    </div>
  </section>
</PageLayout>

<style>
  /* All styling handled by utility classes and components */
</style>
