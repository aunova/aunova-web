---
import PageLayout from "../../layouts/PageLayout.astro";
import { getTranslation } from "../../utils/i18n";

const lang = "en";
const t = getTranslation(lang);
---

<PageLayout
  title="Contact Aunova - Begin a Strategic Conversation"
  description="We welcome conversations with institutions building toward a long-term, human- and planet-positive future."
  lang={lang}
>
  <section class="contact-hero">
    <div class="container">
      <div class="hero-content">
        <h1>{t.contact.title}</h1>
        <p class="hero-intro">{t.contact.intro}</p>
      </div>
    </div>
  </section>

  <section class="contact-section">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-form-wrapper">
          <form class="contact-form" action="https://formspree.io/f/xpwpejjq" method="POST">
            <div class="form-group">
              <label for="name">{t.contact.form.name}</label>
              <input type="text" id="name" name="name" required />
            </div>

            <div class="form-group">
              <label for="organization">{t.contact.form.organization}</label>
              <input type="text" id="organization" name="organization" required />
            </div>

            <div class="form-group">
              <label for="systemFamily">{t.contact.form.systemFamily}</label>
              <select id="systemFamily" name="systemFamily" required>
                <option value="">Select a system family...</option>
                {t.contact.form.systemFamilyOptions.map((option) => (
                  <option value={option}>{option}</option>
                ))}
              </select>
            </div>

            <div class="form-group">
              <label for="criticalSystem">{t.contact.form.criticalSystem}</label>
              <textarea id="criticalSystem" name="criticalSystem" rows="4" required></textarea>
            </div>

            <div class="form-group">
              <label>{t.contact.form.timeHorizon}</label>
              <div class="radio-group">
                {t.contact.form.timeHorizonOptions.map((option, index) => (
                  <label class="radio-label">
                    <input 
                      type="radio" 
                      name="timeHorizon" 
                      value={option} 
                      required={index === 0}
                    />
                    <span>{option}</span>
                  </label>
                ))}
              </div>
            </div>

            <button type="submit" class="btn btn-primary btn-lg">
              {t.contact.form.submit}
            </button>
          </form>

          <p class="form-closing">{t.contact.closing}</p>
        </div>

        <div class="contact-options">
          <div class="contact-card">
            <div class="card-content">
              <div class="contact-icon">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
              </div>
              <h3>Schedule a Call</h3>
              <p>Book a 30-minute strategic conversation</p>
            </div>
            <a
              href="https://cal.com/ngmisl/aunova"
              target="_blank"
              rel="noopener"
              class="btn btn-outline"
            >
              Book Meeting
            </a>
          </div>

          <div class="contact-card">
            <div class="card-content">
              <div class="contact-icon">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
              </div>
              <h3>Email Us</h3>
              <p>Send us a message directly</p>
            </div>
            <a href="mailto:hello@aunova.net" class="btn btn-outline">
              hello@aunova.net
            </a>
          </div>

          <div class="contact-card">
            <div class="card-content">
              <div class="contact-icon">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
                </svg>
              </div>
              <h3>LinkedIn</h3>
              <p>Connect with us professionally</p>
            </div>
            <a
              href="https://www.linkedin.com/company/aunova-ou/"
              target="_blank"
              rel="noopener"
              class="btn btn-outline"
            >
              Follow Us
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  .contact-hero {
    padding: var(--space-3xl) 0;
    background: linear-gradient(
      135deg,
      var(--color-background) 0%,
      color-mix(in srgb, var(--color-secondary) 10%, var(--color-background)) 100%
    );
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-content h1 {
    font-size: var(--text-4xl);
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: var(--space-lg);
  }

  .hero-intro {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    line-height: 1.7;
  }

  .contact-section {
    padding: var(--space-3xl) 0 var(--space-5xl);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--space-3xl);
    max-width: 1100px;
    margin: 0 auto;
  }

  .contact-form-wrapper {
    background: var(--color-background-elevated, var(--color-white));
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .form-group label {
    font-weight: 600;
    font-size: var(--text-sm);
    color: var(--color-text);
  }

  .form-group input,
  .form-group textarea,
  .form-group select {
    padding: var(--space-md);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    font-size: var(--text-base);
    background: var(--color-background);
    color: var(--color-text);
    transition: border-color var(--transition-fast);
  }

  .form-group input:focus,
  .form-group textarea:focus,
  .form-group select:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .radio-group {
    display: flex;
    gap: var(--space-xl);
  }

  .radio-label {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    cursor: pointer;
    font-weight: 400;
  }

  .radio-label input {
    width: 20px;
    height: 20px;
    accent-color: var(--color-primary);
  }

  .form-closing {
    margin-top: var(--space-lg);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    font-style: italic;
    text-align: center;
  }

  .contact-options {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .contact-card {
    padding: var(--space-lg);
    background: var(--color-background-elevated, var(--color-white));
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .contact-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-md);
  }

  .card-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .contact-icon {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    width: 48px;
    height: 48px;
    background: color-mix(in srgb, var(--color-primary) 10%, var(--color-background));
    border-radius: var(--radius-md);
    color: var(--color-primary);
  }

  .contact-card h3 {
    font-size: var(--text-lg);
    font-weight: 700;
    margin: 0;
    color: var(--color-text);
  }

  .contact-card p {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.5;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-sm) var(--space-xl);
    border-radius: var(--radius-md);
    font-weight: 600;
    font-size: var(--text-base);
    transition: all var(--transition-fast);
    text-decoration: none;
    cursor: pointer;
    border: 2px solid transparent;
  }

  .btn-lg {
    padding: var(--space-md) var(--space-2xl);
    width: 100%;
  }

  .btn-primary {
    background-color: var(--color-primary);
    color: var(--color-white);
    border-color: var(--color-primary);
  }

  .btn-primary:hover {
    background-color: var(--color-primary-hover);
    border-color: var(--color-primary-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    text-decoration: none;
    color: var(--color-white);
  }

  .btn-outline {
    background-color: transparent;
    color: var(--color-primary);
    border-color: var(--color-primary);
    font-size: var(--text-sm);
    padding: var(--space-sm) var(--space-md);
  }

  .btn-outline:hover {
    background-color: var(--color-primary);
    color: var(--color-white);
    text-decoration: none;
  }

  @media (max-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
    }

    .contact-options {
      flex-direction: row;
      flex-wrap: wrap;
    }

    .contact-card {
      flex: 1;
      min-width: 200px;
    }
  }

  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: var(--text-3xl);
    }

    .contact-options {
      flex-direction: column;
    }

    .contact-card {
      min-width: unset;
    }

    .radio-group {
      flex-direction: column;
      gap: var(--space-md);
    }
  }
</style>
