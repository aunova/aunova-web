---
import PageLayout from '../layouts/PageLayout.astro';
import ServicePillar from '../components/features/ServicePillar.astro';
import FAQ from '../components/FAQ.astro';
import { getTranslation } from '../utils/i18n';

// Default to English - no language detection
const lang = 'en';
const t = getTranslation(lang);
---

<PageLayout 
  title="Aunova - Blockchain, Zero-Knowledge & AI Solutions"
  description="Innovation hub for blockchain, zero-knowledge, and decentralized AI solutions."
  lang={lang}
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title">
          <span class="gradient-text">{t.hero.title}</span>
        </h1>
        <p class="hero-subtitle">{t.hero.subtitle}</p>
        <div class="hero-actions">
          <a href="#services" class="btn btn-primary">{t.hero.cta.primary}</a>
          <a href={`/${lang}/contact`} class="btn btn-secondary">{t.hero.cta.secondary}</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="services">
    <div class="container">
      <div class="section-header">
        <h2>{t.services.title}</h2>
        <p>{t.services.subtitle}</p>
      </div>
      
      <div class="pillars-grid">
        <ServicePillar
          title={t.services.pillars.zk.title}
          description={t.services.pillars.zk.description}
          features={t.services.pillars.zk.features}
          icon="zk"
          href={`/${lang}/services/zero-knowledge`}
          linkText={t.services.learnMore}
        />
        
        <ServicePillar
          title={t.services.pillars.ai.title}
          description={t.services.pillars.ai.description}
          features={t.services.pillars.ai.features}
          icon="ai"
          href={`/${lang}/services/ai-web3`}
          linkText={t.services.learnMore}
        />
        
        <ServicePillar
          title={t.services.pillars.hybrid.title}
          description={t.services.pillars.hybrid.description}
          features={t.services.pillars.hybrid.features}
          icon="hybrid"
          href={`/${lang}/services/hybrid-zk-ai`}
          linkText={t.services.learnMore}
        />
        
        <ServicePillar
          title={t.services.pillars.infra.title}
          description={t.services.pillars.infra.description}
          features={t.services.pillars.infra.features}
          icon="infra"
          href={`/${lang}/services/infrastructure`}
          linkText={t.services.learnMore}
        />
      </div>
    </div>
  </section>
  
  <!-- FAQ Section -->
  <FAQ />

  <!-- CTA Section -->
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Ready to Build the Future?</h2>
        <p>Let's discuss how we can help you leverage Zero-Knowledge proofs and AI for your next project.</p>
        <div class="cta-actions">
          <a href={`/${lang}/contact`} class="btn btn-primary">Get Started</a>
          <a href="https://cal.com/ngmisl/aunova" target="_blank" rel="noopener" class="btn btn-outline">
            Schedule a Call
          </a>
        </div>
      </div>
    </div>
  </section>
</PageLayout>

<style>
  /* Hero Section */
  .hero {
    padding: var(--space-5xl) 0;
    background: linear-gradient(135deg, var(--color-background) 0%, color-mix(in srgb, var(--color-secondary) 10%, var(--color-background)) 100%);
    position: relative;
    overflow: hidden;
  }
  
  .hero::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -25%;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, var(--color-primary) 0%, transparent 70%);
    opacity: 0.05;
    pointer-events: none;
  }
  
  .hero-content {
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }
  
  .hero-title {
    font-size: var(--text-5xl);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: var(--space-lg);
  }
  
  .gradient-text {
    /* Darker gradient for light mode for better readability */
    background: linear-gradient(135deg, var(--color-red-dark) 0%, #8B7F47 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  /* Keep original gradient for dark mode */
  @media (prefers-color-scheme: dark) {
    .gradient-text {
      background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
  }
  
  .hero-subtitle {
    font-size: var(--text-xl);
    color: var(--color-text-muted);
    margin-bottom: var(--space-2xl);
    line-height: 1.6;
  }
  
  .hero-actions {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }
  
  /* Services Section */
  .services {
    padding: var(--space-5xl) 0;
  }
  
  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto var(--space-3xl);
  }
  
  .section-header h2 {
    font-size: var(--text-4xl);
    font-weight: 700;
    margin-bottom: var(--space-md);
  }
  
  .section-header p {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
  }
  
  .pillars-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-xl);
  }
  
  /* CTA Section */
  .cta-section {
    padding: var(--space-5xl) 0;
    background: linear-gradient(135deg, color-mix(in srgb, var(--color-primary) 5%, var(--color-background)) 0%, var(--color-background) 100%);
  }
  
  .cta-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }
  
  .cta-content h2 {
    font-size: var(--text-3xl);
    font-weight: 700;
    margin-bottom: var(--space-md);
  }
  
  .cta-content p {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    margin-bottom: var(--space-xl);
  }
  
  .cta-actions {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }
  
  /* Buttons */
  .btn {
    padding: var(--space-sm) var(--space-lg);
    border-radius: var(--radius-md);
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: all var(--transition-fast);
  }
  
  .btn-primary {
    background-color: var(--color-primary);
    color: var(--color-white);
  }
  
  .btn-primary:hover {
    background-color: color-mix(in srgb, var(--color-primary) 85%, black);
    transform: translateY(-2px);
  }
  
  .btn-secondary {
    background-color: transparent;
    color: var(--color-primary);
    border: 2px solid var(--color-primary);
  }
  
  .btn-secondary:hover {
    background-color: var(--color-primary);
    color: var(--color-white);
    transform: translateY(-2px);
  }
  
  .btn-outline {
    background-color: transparent;
    color: var(--color-text);
    border: 2px solid var(--color-border);
  }
  
  .btn-outline:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    transform: translateY(-2px);
  }
  
  /* Mobile Responsive */
  @media (max-width: 768px) {
    .hero {
      padding: var(--space-3xl) 0;
    }
    
    .hero-title {
      font-size: var(--text-4xl);
    }
    
    .hero-subtitle {
      font-size: var(--text-lg);
    }
    
    .services {
      padding: var(--space-3xl) 0;
    }
    
    .cta-section {
      padding: var(--space-3xl) 0;
    }
  }
</style>
