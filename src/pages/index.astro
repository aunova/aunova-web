---
// This page handles language detection and redirection on the client side
---

<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Redirecting...</title>
    <script>
      // Detect browser language and redirect immediately
      (function() {
        // Get the browser's language preference
        const browserLang = (navigator.language || navigator.userLanguage || 'en').toLowerCase();
        
        // Determine target language (Spanish or English)
        const lang = browserLang.startsWith('es') ? 'es' : 'en';
        
        // Redirect to the appropriate language homepage
        window.location.replace(`/${lang}`);
      })();
    </script>
    <noscript>
      <!-- Fallback for users with JavaScript disabled -->
      <meta http-equiv="refresh" content="0; url=/en" />
    </noscript>
    <style>
      body {
        font-family: system-ui, -apple-system, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        background: #f5f5f5;
      }
      .loading {
        text-align: center;
        color: #666;
      }
    </style>
  </head>
  <body>
    <!-- This content is shown briefly while JavaScript executes -->
    <div class="loading">
      <p>Detecting language...</p>
    </div>
  </body>
</html>
