---
import PageLayout from "../layouts/PageLayout.astro";
import { getTranslation } from "../utils/i18n";

// Default to English - no language detection
const lang = "en";
const t = getTranslation(lang);
---

<PageLayout
    title="Aunova - Private AI. Real Compliance."
    description="Run AI on sensitive data without exposing it. Powered by Zero-Knowledge Proofs, Fully Homomorphic Encryption, and Blockchain."
    lang={lang}
>
    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title">
                    <span class="gradient-text">{t.hero.title}</span>
                </h1>
                <p class="hero-subtitle">{t.hero.subtitle}</p>
                <div class="hero-actions">
                    <a href={`/${lang}/contact`} class="btn btn-primary"
                        >{t.hero.cta.primary}</a
                    >
                </div>
            </div>
        </div>
    </section>

    <!-- Problem-Solution Section -->
    <section class="problem-solution">
        <div class="container">
            <div class="problem-content">
                <h2 class="problem-title">{t.problemSolution.title}</h2>
                <p class="problem-text">{t.problemSolution.problem}</p>
            </div>

            <div class="solution-content">
                <h2 class="solution-title">
                    {t.problemSolution.solutionTitle}
                </h2>
                <p class="solution-text">{t.problemSolution.solution}</p>
            </div>

            <div class="technology-showcase">
                <div class="showcase-intro">
                    <p class="showcase-subtitle">
                        At Aunova, we build secure, privacy-first AI systems
                        using cutting-edge cryptography:
                    </p>
                </div>

                <div class="technology-grid">
                    <div
                        class="tech-card"
                        data-tech-color="#8B2635"
                        data-priority="1"
                        data-animation-delay="0s"
                    >
                        <div class="tech-icon" data-tech-type="zk">üîê</div>
                        <div class="tech-content">
                            <h3 class="tech-title">Zero-Knowledge Proofs</h3>
                            <p class="tech-description">
                                for <strong>verifiable results</strong>
                            </p>
                        </div>
                    </div>

                    <div
                        class="tech-card"
                        data-tech-color="#2563EB"
                        data-priority="2"
                        data-animation-delay="0.2s"
                    >
                        <div class="tech-icon" data-tech-type="fhe">üõ°Ô∏è</div>
                        <div class="tech-content">
                            <h3 class="tech-title">
                                Fully Homomorphic Encryption
                            </h3>
                            <p class="tech-description">
                                to <strong>run AI on encrypted data</strong>
                            </p>
                        </div>
                    </div>

                    <div
                        class="tech-card"
                        data-tech-color="#059669"
                        data-priority="3"
                        data-animation-delay="0.4s"
                    >
                        <div class="tech-icon" data-tech-type="blockchain">
                            ‚õìÔ∏è
                        </div>
                        <div class="tech-content">
                            <h3 class="tech-title">Blockchain</h3>
                            <p class="tech-description">
                                to <strong>log decisions immutably</strong> for full
                                auditability
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Real Use Cases Section -->
    <section class="use-cases">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title-red">{t.useCases.title}</h2>
            </div>

            <div class="use-cases-grid">
                <div
                    class="use-case-card"
                    data-industry="healthcare"
                    data-color="#059669"
                    data-animation-delay="0s"
                >
                    <div class="card-header">
                        <div class="industry-icon" data-icon-type="healthcare">
                            {t.useCases.cards.healthcare.icon}
                        </div>
                        <h3 class="industry-title">
                            {t.useCases.cards.healthcare.industry}
                        </h3>
                    </div>

                    <div class="card-content">
                        <div class="content-section">
                            <p>{t.useCases.cards.healthcare.content}</p>
                        </div>

                        <div class="tech-badges">
                            {
                                t.useCases.cards.healthcare.tech.map((tech) => (
                                    <span class="tech-badge">{tech}</span>
                                ))
                            }
                        </div>
                    </div>
                </div>

                <div
                    class="use-case-card"
                    data-industry="finance"
                    data-color="#1C6DD0"
                    data-animation-delay="0.2s"
                >
                    <div class="card-header">
                        <div class="industry-icon" data-icon-type="finance">
                            {t.useCases.cards.finance.icon}
                        </div>
                        <h3 class="industry-title">
                            {t.useCases.cards.finance.industry}
                        </h3>
                    </div>

                    <div class="card-content">
                        <div class="content-section">
                            <p>{t.useCases.cards.finance.content}</p>
                        </div>

                        <div class="tech-badges">
                            {
                                t.useCases.cards.finance.tech.map((tech) => (
                                    <span class="tech-badge">{tech}</span>
                                ))
                            }
                        </div>
                    </div>
                </div>

                <div
                    class="use-case-card"
                    data-industry="compliance"
                    data-color="#7C3AED"
                    data-animation-delay="0.4s"
                >
                    <div class="card-header">
                        <div class="industry-icon" data-icon-type="compliance">
                            {t.useCases.cards.compliance.icon}
                        </div>
                        <h3 class="industry-title">
                            {t.useCases.cards.compliance.industry}
                        </h3>
                    </div>

                    <div class="card-content">
                        <div class="content-section">
                            <p>{t.useCases.cards.compliance.content}</p>
                        </div>

                        <div class="tech-badges">
                            {
                                t.useCases.cards.compliance.tech.map((tech) => (
                                    <span class="tech-badge">{tech}</span>
                                ))
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section class="about-section">
        <div class="container">
            <div class="section-header">
                <h2 class="about-title">{t.about.title}</h2>
            </div>
            <div class="about-content">
                {
                    t.about.description.map((paragraph) => (
                        <p class="about-text">{paragraph}</p>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Final CTA Section -->
    <section class="final-cta">
        <div class="container">
            <div class="cta-content">
                <h2>{t.finalCta.title}</h2>
                <div class="cta-actions">
                    <a
                        href="https://cal.com/ngmisl/aunova"
                        target="_blank"
                        rel="noopener"
                        class="btn btn-primary"
                    >
                        {t.finalCta.actions.call}
                    </a>
                    <a href={`/${lang}/contact`} class="btn btn-outline">
                        {t.finalCta.actions.onePager}
                    </a>
                </div>
            </div>
        </div>
    </section>
</PageLayout>

<style>
    /* Hero Section */
    .hero {
        padding: var(--space-5xl) 0;
        background: linear-gradient(
            135deg,
            var(--color-background) 0%,
            color-mix(
                    in srgb,
                    var(--color-secondary) 10%,
                    var(--color-background)
                )
                100%
        );
        position: relative;
        overflow: hidden;
    }

    .hero::before {
        content: "";
        position: absolute;
        top: -50%;
        right: -25%;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle,
            var(--color-primary) 0%,
            transparent 70%
        );
        opacity: 0.05;
        pointer-events: none;
    }

    .hero-content {
        text-align: center;
        max-width: 900px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }

    .hero-title {
        font-size: var(--text-5xl);
        font-weight: 800;
        line-height: 1.1;
        margin-bottom: var(--space-lg);
    }

    .gradient-text {
        color: var(--color-primary);
    }

    .hero-subtitle {
        font-size: var(--text-xl);
        color: var(--color-text-muted);
        margin-bottom: var(--space-2xl);
        line-height: 1.6;
    }

    .hero-actions {
        display: flex;
        gap: var(--space-md);
        justify-content: center;
        flex-wrap: wrap;
    }

    /* Problem-Solution Section */
    .problem-solution {
        padding: var(--space-5xl) 0;
        background: color-mix(
            in srgb,
            var(--color-background) 97%,
            var(--color-primary)
        );
    }

    .problem-content {
        text-align: center;
        margin-bottom: var(--space-3xl);
    }

    .problem-title {
        font-size: var(--text-3xl);
        font-weight: 700;
        margin-bottom: var(--space-md);
        color: var(--color-primary);
    }

    .problem-text {
        font-size: var(--text-xl);
        color: var(--color-text-muted);
        max-width: 600px;
        margin: 0 auto;
    }

    .solution-content {
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
    }

    .solution-title {
        font-size: var(--text-3xl);
        font-weight: 700;
        margin-bottom: var(--space-md);
    }

    .solution-text {
        font-size: var(--text-lg);
        color: var(--color-text-muted);
        margin-bottom: var(--space-xl);
    }

    /* Technology Showcase */
    .technology-showcase {
        margin-top: var(--space-3xl);
    }

    .showcase-intro {
        text-align: center;
        margin-bottom: var(--space-2xl);
    }

    .showcase-subtitle {
        font-size: var(--text-base);
        font-weight: 400;
        color: var(--color-text);
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.6;
    }

    .technology-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: var(--space-xl);
        margin-top: var(--space-2xl);
    }

    .tech-card {
        --card-color: attr(data-tech-color type(<color>), var(--color-primary));
        --card-priority: attr(data-priority type(<integer>), 1);
        --animation-delay: attr(data-animation-delay type(<time>), 0s);

        background: var(--color-background);
        border: 2px solid color-mix(in srgb, var(--card-color) 20%, transparent);
        border-radius: var(--radius-lg);
        padding: var(--space-xl);
        position: relative;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        animation: slideInUp 0.6s ease-out var(--animation-delay) both;
        order: var(--card-priority);
        cursor: pointer;
        min-height: 280px;
        display: flex;
        flex-direction: column;
    }

    .tech-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(
            90deg,
            var(--card-color),
            color-mix(in srgb, var(--card-color) 60%, white)
        );
        border-radius: var(--radius-lg) var(--radius-lg) 0 0;
    }

    .tech-card:hover {
        transform: translateY(-8px);
        border-color: var(--card-color);
        box-shadow:
            0 20px 25px -5px
                color-mix(in srgb, var(--card-color) 15%, transparent),
            0 10px 10px -5px
                color-mix(in srgb, var(--card-color) 20%, transparent);
    }

    .tech-icon {
        --icon-bg: color-mix(
            in srgb,
            var(--card-color) 10%,
            var(--color-background)
        );

        width: 64px;
        height: 64px;
        border-radius: 50%;
        background: var(--icon-bg);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        margin-bottom: var(--space-md);
        transition: transform 0.3s ease;
    }

    .tech-card:hover .tech-icon {
        transform: scale(1.1) rotate(5deg);
    }

    .tech-content {
        text-align: left;
    }

    .tech-title {
        font-size: var(--text-xl);
        font-weight: 700;
        color: var(--card-color);
        margin-bottom: var(--space-sm);
        line-height: 1.3;
    }

    .tech-description {
        font-size: var(--text-base);
        color: var(--color-text-muted);
        line-height: 1.6;
        margin: 0;
    }

    .tech-description strong {
        color: var(--card-color);
        font-weight: 600;
    }

    @keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Use Cases Section */
    .use-cases {
        padding: var(--space-5xl) 0;
    }

    .section-header {
        text-align: center;
        max-width: 700px;
        margin: 0 auto var(--space-3xl);
    }

    .section-header h2 {
        font-size: var(--text-4xl);
        font-weight: 700;
        margin-bottom: var(--space-md);
    }

    .section-header p {
        font-size: var(--text-lg);
        color: var(--color-text-muted);
    }

    .section-title-red {
        font-size: var(--text-3xl) !important;
        font-weight: 700;
        color: var(--color-primary);
        margin-bottom: var(--space-md);
    }

    .use-cases-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: var(--space-xl);
        margin-top: var(--space-2xl);
    }

    .use-case-card {
        --card-color: attr(data-color type(<color>), var(--color-primary));
        --animation-delay: attr(data-animation-delay type(<time>), 0s);

        background: var(--color-background);
        border: 1px solid
            color-mix(in srgb, var(--card-color) 20%, var(--color-border));
        border-radius: var(--radius-lg);
        padding: 0;
        position: relative;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        animation: slideInUp 0.6s ease-out var(--animation-delay) both;
        min-height: 400px;
        display: flex;
        flex-direction: column;
    }

    .use-case-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(
            90deg,
            var(--card-color),
            color-mix(in srgb, var(--card-color) 70%, white)
        );
    }

    .use-case-card:hover {
        transform: translateY(-8px);
        border-color: var(--card-color);
        box-shadow:
            0 20px 25px -5px
                color-mix(in srgb, var(--card-color) 20%, transparent),
            0 10px 10px -5px
                color-mix(in srgb, var(--card-color) 25%, transparent);
    }

    .card-header {
        padding: var(--space-xl) var(--space-xl) var(--space-lg);
        background: linear-gradient(
            135deg,
            color-mix(in srgb, var(--card-color) 8%, transparent),
            color-mix(in srgb, var(--card-color) 3%, transparent)
        );
        display: flex;
        align-items: center;
        gap: var(--space-md);
    }

    .industry-icon {
        --icon-bg: color-mix(
            in srgb,
            var(--card-color) 15%,
            var(--color-background)
        );

        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: var(--icon-bg);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        transition: transform 0.3s ease;
    }

    .use-case-card:hover .industry-icon {
        transform: scale(1.1) rotate(5deg);
    }

    .industry-title {
        font-size: var(--text-xl);
        font-weight: 700;
        color: var(--card-color);
        margin: 0;
    }

    .card-content {
        padding: 0 var(--space-xl) var(--space-xl);
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: var(--space-lg);
    }

    .content-section p {
        font-size: var(--text-base);
        line-height: 1.7;
        color: var(--color-text);
        margin: 0;
    }

    .tech-badges {
        display: flex;
        flex-wrap: wrap;
        gap: var(--space-sm);
        margin-top: auto;
    }

    .tech-badge {
        --badge-bg: color-mix(
            in srgb,
            var(--card-color) 10%,
            var(--color-background)
        );
        --badge-text: color-mix(
            in srgb,
            var(--card-color) 80%,
            var(--color-text)
        );

        background: var(--badge-bg);
        color: var(--badge-text);
        padding: var(--space-xs) var(--space-sm);
        border-radius: var(--radius-sm);
        font-size: var(--text-xs);
        font-weight: 500;
        border: 1px solid color-mix(in srgb, var(--card-color) 20%, transparent);
    }

    /* About Section */
    .about-section {
        padding: var(--space-5xl) 0;
        background: color-mix(
            in srgb,
            var(--color-background) 97%,
            var(--color-secondary)
        );
    }

    .about-content {
        max-width: 800px;
        margin: 0 auto;
    }

    /* Final CTA Section */
    .final-cta {
        padding: var(--space-5xl) 0;
        background: linear-gradient(
            135deg,
            color-mix(in srgb, var(--color-primary) 5%, var(--color-background))
                0%,
            var(--color-background) 100%
        );
    }

    .cta-content {
        text-align: center;
        max-width: 700px;
        margin: 0 auto;
    }

    .cta-content h2 {
        font-size: var(--text-3xl);
        font-weight: 700;
        margin-bottom: var(--space-xl);
    }

    .cta-actions {
        display: flex;
        gap: var(--space-md);
        justify-content: center;
        flex-wrap: wrap;
    }

    /* Buttons */
    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: var(--space-sm) var(--space-xl);
        border-radius: var(--radius-md);
        font-weight: 600;
        font-size: var(--text-base);
        transition: all var(--transition-fast);
        text-decoration: none;
        cursor: pointer;
        border: 2px solid transparent;
    }

    .btn-primary {
        background-color: var(--color-primary);
        color: var(--color-white);
        border-color: var(--color-primary);
    }

    .btn-primary:hover {
        background-color: color-mix(in srgb, var(--color-primary) 85%, black);
        border-color: color-mix(in srgb, var(--color-primary) 85%, black);
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
    }

    .btn-outline {
        background-color: transparent;
        color: var(--color-primary);
        border-color: var(--color-primary);
    }

    .btn-outline:hover {
        background-color: var(--color-primary);
        color: var(--color-white);
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
    }

    .about-title {
        font-size: var(--text-4xl);
        font-weight: 700;
        margin-bottom: var(--space-md);
        color: var(--color-primary);
    }

    .about-text {
        font-size: var(--text-lg);
        color: var(--color-text);
        line-height: 1.7;
        margin-bottom: var(--space-lg);
    }

    .about-text:last-child {
        margin-bottom: 0;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .hero {
            padding: var(--space-3xl) 0;
        }

        .hero-title {
            font-size: var(--text-4xl);
        }

        .hero-subtitle {
            font-size: var(--text-lg);
        }

        .problem-solution {
            padding: var(--space-3xl) 0;
        }

        .problem-title,
        .solution-title {
            font-size: var(--text-2xl);
        }

        .technology-grid {
            grid-template-columns: 1fr;
        }

        .tech-icon {
            width: 48px;
            height: 48px;
            font-size: 1.5rem;
        }

        .showcase-subtitle {
            font-size: var(--text-lg);
        }

        .use-cases {
            padding: var(--space-3xl) 0;
        }

        .section-header h2 {
            font-size: var(--text-3xl);
        }

        .use-cases-grid {
            grid-template-columns: 1fr;
            gap: var(--space-lg);
        }

        .use-case-card {
            min-height: auto;
        }

        .card-header {
            padding: var(--space-lg);
        }

        .industry-icon {
            width: 40px;
            height: 40px;
            font-size: 1.25rem;
        }

        .card-content {
            padding: 0 var(--space-lg) var(--space-lg);
            gap: var(--space-md);
        }

        .about-section {
            padding: var(--space-3xl) 0;
        }

        .about-content h2 {
            font-size: var(--text-2xl);
        }

        .final-cta {
            padding: var(--space-3xl) 0;
        }
    }
</style>
