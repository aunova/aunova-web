---
import '../styles/global.css';
import SEO from '../components/SEO.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  lang?: 'en' | 'es';
  type?: 'website' | 'article' | 'organization';
  publishDate?: string;
  author?: string;
}

const { 
  title = 'Aunova - Zero-Knowledge & AI Solutions', 
  description = 'Leading consultancy in Zero-Knowledge proofs, AI, and Web3 integration. Build privacy-preserving, decentralized solutions with cutting-edge technology.',
  image = '/images/og-default.webp',
  lang = 'en',
  type = 'website',
  publishDate,
  author
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="alternate" type="application/rss+xml" title="Aunova Blog RSS Feed" href="/rss.xml" />
  <meta name="generator" content={Astro.generator} />
  
  <!-- Primary Meta Tags -->
  <title>{title}</title>
  <meta name="description" content={description} />
  
  <!-- SEO Component with Structured Data, OG Tags, etc -->
  <SEO 
    title={title}
    description={description}
    image={image}
    type={type}
    publishDate={publishDate}
    author={author}
    canonical={canonicalURL.href}
  />
  
  <!-- Language Alternates -->
  <link rel="alternate" hreflang="en" href={new URL('/en' + Astro.url.pathname.replace(/^\/(en|es)/, ''), Astro.site)} />
  <link rel="alternate" hreflang="es" href={new URL('/es' + Astro.url.pathname.replace(/^\/(en|es)/, ''), Astro.site)} />
  <link rel="alternate" hreflang="x-default" href={new URL(Astro.url.pathname.replace(/^\/(en|es)/, ''), Astro.site)} />
  
  <slot name="head" />
</head>
<body>
  <slot />
</body>
</html>
