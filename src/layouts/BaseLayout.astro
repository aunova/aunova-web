---
import "../styles/global.css";
import SEO from "../components/SEO.astro";

export interface Props {
  title: string;
  description?: string;
  image?: string;
  lang?: "en" | "es";
  type?: "website" | "article" | "organization";
  publishDate?: string;
  author?: string;
}

const {
  title = "Aunova - Zero-Knowledge & AI Solutions",
  description = "We design secure AI systems using Zero-Knowledge Proofs, Homomorphic Encryption, and Blockchain. Run models on sensitive data - safely.",
  image = "/images/og-default.webp",
  lang = "en",
  type = "website",
  publishDate,
  author,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang={lang}>
  <head>
    <ClientRouter />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Aunova Blog RSS Feed"
      href="/rss.xml"
    />

    <!-- Preload critical fonts -->
    <link rel="preload" as="font" type="font/woff2" href="/fonts/Inter-Variable.woff2" crossorigin />
    <link rel="preload" as="font" type="font/woff2" href="/fonts/SourceSerif4-Variable.woff2" crossorigin />

    <!-- DNS prefetch for external services -->
    <link rel="dns-prefetch" href="https://cal.com" />

    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- SEO Component with Structured Data, OG Tags, etc -->
    <SEO
      title={title}
      description={description}
      image={image}
      type={type}
      publishDate={publishDate}
      author={author}
      canonical={canonicalURL.href}
    />

    <!-- Language Alternates -->
    <link
      rel="alternate"
      hreflang="en"
      href={new URL(
        "/en" + Astro.url.pathname.replace(/^\/(en|es)/, ""),
        Astro.site,
      )}
    />
    <link
      rel="alternate"
      hreflang="es"
      href={new URL(
        "/es" + Astro.url.pathname.replace(/^\/(en|es)/, ""),
        Astro.site,
      )}
    />
    <link
      rel="alternate"
      hreflang="x-default"
      href={new URL(Astro.url.pathname.replace(/^\/(en|es)/, ""), Astro.site)}
    />

    <slot name="head" />
  </head>
  <body>
    <slot />
  </body>
</html>
