---
import BaseLayout from "./BaseLayout.astro";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import CookieNotice from "../components/features/CookieNotice.astro";

export interface Props {
    title: string;
    description?: string;
    image?: string;
    lang?: "en" | "es";
    type?: "website" | "article" | "organization";
    publishDate?: string;
    author?: string;
}

const { title, description, image, lang, type, publishDate, author } =
    Astro.props;
---

<BaseLayout
    title={title}
    description={description}
    image={image}
    lang={lang}
    type={type}
    publishDate={publishDate}
    author={author}
>
    <Header />
    <main>
        <slot />
    </main>
    <Footer />
    <CookieNotice />
</BaseLayout>
